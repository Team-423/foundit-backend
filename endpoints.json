  "POST /api/items": {
    "description": "Posts a new item and saves it to the database. Request body must include required item details and a valid author id",
    "requiredFields": {
      "item_name": "string",
      "author": "object (must contain valid MongoDB ObjectId)",
      "category": "string",
      "description": "string",
      "location": "string",
      "found": "boolean",
      "lost": "boolean"
    },
    "exampleRequest": {
      "item_name": "Black Wallet",
